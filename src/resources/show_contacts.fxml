<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="572.0" prefWidth="442.0" xmlns="http://javafx.com/javafx/1.8.0.172"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ShowContacts">
    <TableView fx:id="contactTableView" layoutY="55.0" prefHeight="518.0" prefWidth="442.0">
        <columns>
            <TableColumn fx:id="column_name" prefWidth="185.59996032714844" text="Name"/>
            <TableColumn fx:id="column_phone" prefWidth="214.4000244140625" text="Phone"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <Button
            fx:id="btn_add_contact"
            layoutX="24.0"
            layoutY="14.0"
            mnemonicParsing="false"
            onAction="#addContact"
            text="Add a new Contact"/>
    <Button
            fx:id="btn_edit"
            layoutX="180.0"
            layoutY="14.0"
            mnemonicParsing="false"
            text="Edit Contact"/>
    <Button
            fx:id="btn_delete"
            layoutX="322.0"
            layoutY="14.0"
            mnemonicParsing="false"
            text="Delete Contact"/>

</Pane>
